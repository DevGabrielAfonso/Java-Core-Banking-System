<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mycompany.javabank.controller.MenuController">
   <children>
      <Label layoutX="14.0" layoutY="14.0" text="Welcome to JavaBank">
         <font>
            <Font name="DejaVu Sans Mono Bold" size="50.0" />
         </font>
      </Label>
      <Label layoutX="14.0" layoutY="96.0" text="Your balance:">
         <font>
            <Font name="System Bold" size="16.0" />
         </font>
      </Label>
      <Label fx:id="labelBalance" layoutX="127.0" layoutY="96.0" text="USD$ 0.00">
         <font>
            <Font name="System Bold" size="16.0" />
         </font>
      </Label>
      <Button fx:id="deposit" layoutX="153.0" layoutY="237.0" mnemonicParsing="false" onAction="#depositMenu" text="Deposit">
         <font>
            <Font name="System Bold" size="16.0" />
         </font>
      </Button>
      <Button fx:id="withdraw" layoutX="371.0" layoutY="237.0" mnemonicParsing="false" onAction="#withdrawMenu" text="Withdraw">
         <font>
            <Font name="System Bold" size="16.0" />
         </font>
      </Button>
      <Button fx:id="exit" layoutX="535.0" layoutY="91.0" mnemonicParsing="false" onAction="#exitApp" text="Exit" textFill="#dd0000">
         <font>
            <Font name="System Bold" size="16.0" />
         </font>
      </Button>
      <Button fx:id="toggleBalanceView" layoutX="274.0" layoutY="96.0" mnemonicParsing="false" onAction="#toggleBalance" text="O">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
