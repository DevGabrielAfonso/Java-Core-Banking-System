<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: RGB(20,20,20);" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mycompany.javabank.controller.MenuController">
   <children>
      <Label layoutX="14.0" layoutY="14.0" text="Welcome to JavaBank" textFill="WHITE">
         <font>
            <Font name="DejaVu Sans Mono Bold" size="50.0" />
         </font>
      </Label>
      <Label layoutX="14.0" layoutY="96.0" text="Your balance:" textFill="WHITE">
         <font>
            <Font name="System Bold" size="16.0" />
         </font>
      </Label>
      <Label fx:id="labelBalance" layoutX="161.0" layoutY="96.0" text="USD$ 0.00" textFill="WHITE">
         <font>
            <Font name="System Bold" size="16.0" />
         </font>
      </Label>
      <Button fx:id="deposit" layoutX="153.0" layoutY="237.0" mnemonicParsing="false" onAction="#depositMenu" style="-fx-background-color: RGB(80,80,80,);" text="Deposit" textFill="WHITE">
         <font>
            <Font name="System Bold" size="16.0" />
         </font>
      </Button>
      <Button fx:id="withdraw" layoutX="371.0" layoutY="237.0" mnemonicParsing="false" onAction="#withdrawMenu" style="-fx-background-color: RGB(80,80,80,);" text="Withdraw" textFill="WHITE">
