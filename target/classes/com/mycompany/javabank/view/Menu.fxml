            <Font name="System Bold" size="16.0" />
         </font>
      </Button>
      <Button fx:id="exit" layoutX="535.0" layoutY="91.0" mnemonicParsing="false" onAction="#exitApp" style="-fx-background-color: RGB(80,80,80,);" text="Exit" textFill="#dd0000">
